                    <img src="~/images/emptyStar.png" style="height:30px;width:30px;"/>
                    <img src="~/images/emptyStar.png" style="height:30px;width:30px;"/>
                    <img src="~/images/emptyStar.png" style="height:30px;width:30px;"/>
                    <img src="~/images/emptyStar.png" style="height:30px;width:30px;"/>
                    <img src="~/images/emptyStar.png" style="height:30px;width:30px;"/>
                }
                }
            
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.AnimeListId"> <button type="button" class="btn btn-warning ">Edit</button></a> 
