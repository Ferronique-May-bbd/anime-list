                    <img src="~/images/fullStar.png" style="height:30px;width:30px;"/>
                    <img src="~/images/fullStar.png" style="height:30px;width:30px;"/>
                    <img src="~/images/fullStar.png" style="height:30px;width:30px;"/>
                    <img src="~/images/emptyStar.png" style="height:30px;width:30px;"/>
                    <img src="~/images/emptyStar.png" style="height:30px;width:30px;"/>
                }
                else if(checkRating == 4 )
                {
                   <img src="~/images/fullStar.png" style="height:30px;width:30px;"/>
