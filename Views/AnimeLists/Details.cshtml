            @Html.DisplayNameFor(model => model.AnimeRating)
        </dt>
        <dd class = "col-sm-10">    
           
            @{
                var checkRating = @Model.AnimeRating;
                
                if(checkRating == 1 )
                {
                    <img src="~/images/fullStar.png" style="height:30px;width:30px;"/>
